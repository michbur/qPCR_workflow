  ISSN                     = {0026-3672, 1436-5073},
  Keywords                 = {Analytical Chemistry, Characterization and Evaluation of Materials, Data analysis, Lactation phase, Liver, Microengineering, Microfluidic {RT}-{qPCR}, Nanochemistry, Nanotechnology, {PCA}},
  Language                 = {en},
  Url                      = {http://link.springer.com/article/10.1007/s00604-014-1205-x},
