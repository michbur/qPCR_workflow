@Article{viturro_2014,
  Title                    = {Microfluidic high-throughput reverse-transcription quantitative {PCR} analysis of liver gene expression in lactating animals},
  Author                   = {Viturro, Enrique and Altenhofer, Christian and Zölch, Benjamin and Burgmaier, Anja and Riedmaier, Irmgard and Pfaffl, Michael W.},
