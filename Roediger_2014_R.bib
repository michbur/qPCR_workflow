@Article{milbury_2014,
  Title                    = {Determining lower limits of detection of digital {PCR} assays for cancer-related gene mutations},
  Author                   = {Milbury, Coren A. and Zhong, Qun and Lin, Jesse and Williams, Miguel and Olson, Jeff and Link, Darren R. and Hutchison, Brian},
  Journal                  = {Biomolecular Detection and Quantification},
  Year                     = {2014},

  Month                    = sep,
  Number                   = {1},
