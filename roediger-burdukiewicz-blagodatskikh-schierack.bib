@Article{luo_multiplex_2011,
  Title                    = {Multiplex Real-Time {PCR} Melting Curve Assay To Detect Drug-Resistant Mutations of {Mycobacterium} tuberculosis},
  Author                   = {Luo, Tao and Jiang, Lili and Sun, Weiming and Fu, G. and Mei, Jian and Gao, Qian},
