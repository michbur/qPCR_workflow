@Article{corbisier_2015,
  Title                    = {{DNA} copy number concentration measured by digital and droplet digital quantitative {PCR} using certified reference materials},
  Author                   = {Corbisier, Philippe and Pinheiro, Leonardo and Mazoua, St\'{e}phane and Kortekaas, Anne-Marie and Chung, Pui Yan Jenny and Gerganova, Tsvetelina and Roebben, Gert and Emons, Hendrik and Emslie, Kerry},
