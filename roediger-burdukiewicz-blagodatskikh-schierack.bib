@Article{jahn_2013,
  Title                    = {Subpopulation-proteomics in prokaryotic populations},
  Author                   = {Jahn, Michael and Seifert, Jana and von Bergen, Martin and Schmid, Andreas and B\"{u}hler, Bruno and M\"{u}ller, Susann},
